<style>
  footer {
    padding: 1rem;
    overflow: hidden;
    /* border: 1px solid black; */
    background-color: #f5f5f5;
  }

  .footer-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .copyright {
    font-size: 0.75rem;
    font-weight: 500;
    margin: 0;
  }

  .footer-nav ul {
    list-style-type: none;
    display: flex;
    gap: 2rem;
  }

  .footer-nav li a {
    font-size: 0.875rem;
  }

  .footer-nav li a:hover {
    color: #1dabee;
  }

  @media (max-width: 768px) {
    .footer-container {
      flex-direction: column;
      gap: 0.625rem;
      align-items: center;
      text-align: center;
    }

    .footer-nav ul {
      flex-direction: column;
      gap: 0.625rem;
    }

    .footer-nav li a {
      font-size: 0.75rem;
    }

    .copyright {
      order: 2;
      font-size: 0.625rem;
    }
  }
