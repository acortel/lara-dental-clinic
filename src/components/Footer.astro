<style>
    .footer {
        padding: 1rem 0;
        overflow: hidden;
        border: 1px solid black;
    }

    .footer-container {
        display: flex;
        justify-content:space-between;
        align-items: flex-start;
        flex-wrap: wrap;
        gap: 5rem;
        padding: 1rem 2rem;
    }

    .footer-brand {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
        text-align: center;
    }

    .footer-logo {
        width: 250px;
        height: auto;
    }

    .footer-nav,
    .footer-contact,
    .footer-location {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .footer-nav h4,
    .footer-contact h4,
    .footer-location h4 {
        font-size: 1rem;
        font-weight: 700;
        color: #F58EBB;
        margin: 0;
    }

    .footer-nav ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .footer-nav li a {
        font-size: .875rem;
        font-weight: 300;
        text-decoration: none;
    }

    .footer-nav li a:hover {
        text-decoration: underline;
        color: #F58EBB;
    }

    .contact-item a,
    .footer-location address {
        font-size: .875rem;
        font-weight: 400;
        text-decoration: none;
    }

    .contact-item a:hover {
        text-decoration: underline;
        color: #F58EBB;
    }

    .copyright {
        font-size: .75rem;
        font-weight: 500;
        margin: 0;
    }

    @media (max-width: 768px) {
        .footer-container {
            flex-direction: column;
            align-items: center;
            text-align: center;
            gap: 3rem;
        }

        .footer-nav,
        .footer-contact,
        .footer-location {
            align-items: center;
        }
    }
    
    
</style>