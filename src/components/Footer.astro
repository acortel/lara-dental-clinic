import Container from './Container.astro';
---

<footer>
    <Container>
        <div class="footer-container">
            <p class="copyright">Â© 2023 Dr. Lara Dental Clinic. All Rights Reserved. </p>

            <nav class="footer-nav">
                <ul>
                    <li><a href="#hero">Top</a></li>
                    <li><a href="#about">About</a></li>
                    <li><a href="#dentist">Meet the Dentist</a></li>
                    <li><a href="#services">Services</a></li>
                    <li><a href="#contact">Contact Us</a></li>
                </ul>
            </nav>
        </div>
    </Container>
</footer>

<style>
    footer {
        padding: 1rem;
        overflow:hidden;
        /* border: 1px solid black; */
        background-color: #f5f5f5;
    }

    .footer-container {
        display: flex;
        justify-content: space-between;
        align-items: center;

    }

    .copyright {
        font-size: .75rem;
        font-weight: 500;
        margin: 0;
    }

    .footer-nav ul {
        list-style-type: none;
        display: flex;
        gap: 2rem;
    }

    .footer-nav li a {
        font-size: .875rem;
    }

    .footer-nav li a:hover {
        color: #1DABEE;
    }

    @media (max-width: 768px) {
        .footer-container {
            flex-direction: column;
            gap: .625rem;
            align-items: center;
            text-align: center;
        }

        .footer-nav ul {
            flex-direction: column;
            gap: .625rem;
        }

        .footer-nav li a {
            font-size: .75rem;
        }

        .copyright {
            order: 2;
            font-size: .625rem;
        }
    }
</style>

