<style>
    .footer {
        padding: 1rem 0;
        overflow: hidden;
        border: 1px solid black;
    }

    .footer-container {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        flex-wrap: wrap;
        gap: 2rem;
        padding: 0 2.625rem;
    }

    .footer-brand {
        width: 18.2rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1.25rem;
        text-align: center;
    }

    .footer-logo {
        height: auto;
        width: 100%;
        max-height: 120px;
    }
    
    .copyright {
        font-size: .9rem;
        font-weight: 500;
    }

    .footer-contact {
        width: 385px;
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .contact-item {
        display: flex;
        flex-direction: column;
        gap: 0.3rem;
        font-size: 1rem;
    }

    .contact-item h4 {
        color: #f58ebb;
        font-weight: 700;
        margin: 0;
    }

    .contact-item a {
        font-weight: 400;
        margin: 0;
        text-decoration: none;
    }

    .contact-item a:hover {
        color: #f58ebb;
        text-decoration: underline;
    }

    .footer-location {
        display: flex;
        flex-direction: column;
        justify-content: center;
        gap: .625rem;
        max-width: 260px;
        font-size: 1rem;
    }

    .footer-location h4 {
        color: #f58ebb;
        font-weight: 700;
        margin: 0;
    }

    .footer-location address {
        font-style: normal;
        font-weight: 300;
        line-height: 1.4;
        margin: 0;
    }

    @media (max-width: 768px) {
        .footer-container {
            flex-direction: column;
            align-items: center;
            text-align: center;
        }

        .footer-contact, .footer-location {
            align-items: center;
        }
    }

</style>