---
import logo from '../assets/images/logo.png'
import Container from './Container.astro'
import ButtonCTA from './ButtonCTA.astro'
---

<Container>
    <nav class="navbar">
        <a href="#"><img class="logo" src={logo.src} alt="Logo"></a>
        <ul class="menu">
            <li><a href="#about">About</a></li>
            <li><a href="#dentist">Meet the Dentist</a></li>
            <li><a href="#services">Our Services</a></li>
            <li><ButtonCTA href="#contact" text="Contact Us" /></li>
        </ul>
    </nav>  
</Container>


<style>
    .navbar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-top: 0.25rem;   /* py-1 = 1 * 0.25rem */
        padding-bottom: 0.25rem;
    }

    @media (min-width: 768px) {
        .navbar {
            padding-top: 2.5rem;   /* py-10 = 10 * 0.25rem */
            padding-bottom: 2.5rem;
        }
    }
    .menu {
        display: none;
        gap: 2.5rem;
        /* font-family: 'Poppins', sans-serif; */
        font-size: 1rem; 
        /* color: #1a1a1a;   */
        text-decoration: none;
        list-style: none;
    }

    @media (min-width: 768px) {
        .menu {
            display: flex;
        }
    }

    .logo {
        width: 100px;
    }
</style>