---
const { href, text } = Astro.props
---

<a href={href} class="button primary">
    {text}
</a>

<style>
    .button {
        display: inline-block;
        padding: 0.75rem 1.5rem;
        font-weight: 600;
        font-size: 1.6rem;
        border-radius: 10px;
        transition: background-color 0.3s ease;
        text-align: center;
    }

    .primary {
        background-color: #F58EBB;
        columns: #fafafa;
    }

    .primary:hover {
        background-color: #D84DA0;
    }
</style>